<mvc:View controllerName="unit1201.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <!-- <content /> -->
        <!-- <VBox id="idBox">
            <items>
                <Button id="btnPop" text="Popup" press="onPopup"></Button>
                <Text id="idTxt"></Text>
