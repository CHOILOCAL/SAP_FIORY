        <Panel id="idPanel" expandable="false" expanded="true" headerText="Product Category" width="auto" class="sapUiLargeMargin">
            <content>
                <Label id="lblCate" text="Category" design="Bold" required="true"></Label>
                    <ComboBox id="idComBox" items="{/Categories}" selectionChange="onSelectionChange">
                        <core:Item id="idItem" key="{CategoryID}" text="{CategoryName}"></core:Item>
                    </ComboBox>
            </content>
        </Panel>
        <!--  -->
        <Table id="tabProduct" items="{Products}" class="sapUiSmallMargin" width="auto">
            <columns>
                <Column id="colId">
                    <header><Text id="txtId" text="ID" /></header>
                </Column>
                <Column id="colName">
                    <header><Text id="txtName" text="Name" /></header>
                </Column>
                <Column id="colBtn">
                    <header><Text id="txtBtn" text="" /></header>
                </Column>
                <!-- <Column id="colSup">
                    <header><Text id="txtSup" text="Supplier ID" /></header>
                </Column>
                <Column id="colPrice">
                    <header><Text id="txtPrice" text="Price" /></header>
                </Column>
                <Column id="colLevel">
                    <header><Text id="txtLevel" text="Recoreder Level" /></header>
                </Column>
                <Column id="colDisc">
                    <header><Text id="txtDisc" text="Discontinued" /></header>
                </Column> -->
            </columns>
            <items>
                <ColumnListItem id="colList">
                    <cells>
                        <Text id="colTxtId" text="{ProductID}" />
                        <Text id="colTxtNm" text="{ProductName}" />
                        <Button id="btn" text="Button" press="onPopup" />
                        <!-- <Text id="colTxtSup" text="{SupplierID}" />
                        <Text id="colTxtPrice" text="{UnitPrice}" />
                        <Text id="colTxtReOd" text="{ReorderLevel}" />
                        <Text id="colTxtDisc" text="{Discontinued}" /> -->
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        <!-- </VBox> -->
    </Page>
</mvc:View>
