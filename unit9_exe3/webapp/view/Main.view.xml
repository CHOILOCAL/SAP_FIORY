<mvc:View controllerName="unit9exe3.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <!-- <content /> -->
        <Table items="{/data}" id="id" headerText="Carriers" mode="SingleSelectMaster" selectionChange="onCarrierSelectionChange">
            <columns>
                <Column id="col1"><header><Text text="Id" id="txt1" /></header></Column>
                <Column id="col2"><header><Text text="Carrier Name" id="txt2" /></header></Column>
                <Column id="col3"><header><Text text="Currency" id="txt4" /></header></Column>
                <Column id="col4"><header><Text text="Url" id="txt5" /></header></Column>
            </columns>

            <items>
                <ColumnListItem id="colListItem">
                    <cells>
                        <Text text="{carrier/carrId}" id="txt6" />
                        <Text text="{carrier/carrName}" id="txt7" />
                        <Text text="{carrier/currCode}" id="txt8" />
                        <Text text="{carrier/url}" id="txt9" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        <!--  -->
        <Table items="{connections}" id="idConnTable" headerText="Flight connections">
            <columns>
                <Column id="col5"><header><Text text="Connection ID" id="txt10" /></header></Column>
                <Column id="col6"><header><Text text="City from" id="txt11" /></header></Column>
                <Column id="col7"><header><Text text="City to" id="txt12" /></header></Column>
            </columns>

            <items>
                <ColumnListItem id="colListItem2">
                    <cells>
                        <Text text="{connId}" id="txt14" />
                        <Text text="{cityForm}" id="txt15" />
                        <Text text="{cityTo}" id="txt16" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>
